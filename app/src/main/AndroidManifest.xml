<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Moveniba">

        <!-- Esta é a nova tela de início -->
        <activity
            android:name=".StartActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Tela do Quiz -->
        <activity android:name=".MainActivity" />

        <!-- Tela de Gerenciamento de Usuários -->
        <activity
            android:name=".UserManagementActivity"
            android:label="Gerenciar Usuários"
            android:parentActivityName=".StartActivity" />

        <!-- Tela de Exibição do Ranking -->
        <activity
            android:name=".RankingDisplayActivity"
            android:label="Ranking de Pontuações"
            android:parentActivityName=".StartActivity" />

        <!-- Atividade de Ranking antiga (não mais usada como principal) -->
        <activity android:name=".RankingActivity" />

    </application>

</manifest>
